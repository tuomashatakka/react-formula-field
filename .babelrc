{
  "presets": [
    [ "@babel/preset-env", { "modules": false } ],
    "@babel/preset-react",
    "@babel/preset-flow"
  ],
  "plugins": [
    [ "@babel/plugin-proposal-object-rest-spread" ],
    [ "@babel/plugin-proposal-decorators", { "legacy": true } ],
    [ "@babel/plugin-proposal-class-properties", { "loose": true } ]
  ],
  "env": {
    "development": {
      "plugins": [
        [ "flow-runtime" ],
        [ "react-hot-loader/babel" ]
      ]
    }
  }
}
